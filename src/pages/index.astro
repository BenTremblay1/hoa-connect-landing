    <script>
      // Mobile Menu Toggle
      function toggleMobileMenu() {
        const menu = document.getElementById('mobileMenu');
        if (menu) {
          menu.classList.toggle('active');
        }
      }

      const EMAIL_RE = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      const STORAGE_KEY = 'hoa_connect_first_touch_utm';
      const SUPABASE_URL = import.meta.env.PUBLIC_SUPABASE_URL || '';
      const SUPABASE_ANON_KEY = import.meta.env.PUBLIC_SUPABASE_ANON_KEY || '';
      const ENDPOINT = SUPABASE_URL ? `${SUPABASE_URL}/functions/v1/waitlist-signup` : '';

      function track(eventName: string, props: Record<string, unknown> = {}) {
        if (typeof window.plausible === 'function') {
          window.plausible(eventName, { props });
        }
      }

      function captureFirstTouchUtm() {
        const params = new URLSearchParams(window.location.search);
        const next = {
          utm_source: params.get('utm_source') || undefined,
          utm_medium: params.get('utm_medium') || undefined,
          utm_campaign: params.get('utm_campaign') || undefined,
        };

        if (!next.utm_source && !next.utm_medium && !next.utm_campaign) {
          return;
        }

        if (!localStorage.getItem(STORAGE_KEY)) {
          localStorage.setItem(STORAGE_KEY, JSON.stringify(next));
        }
      }

      function getStoredUtm() {
        try {
          return JSON.parse(localStorage.getItem(STORAGE_KEY) || '{}');
        } catch {
          return {};
        }
      }

      function setMessage(message: HTMLElement, text: string, isError: boolean) {
        message.textContent = text;
        message.className = `form-message ${isError ? 'error' : 'success'}`;
      }

      async function submitWaitlist(payload: Record<string, string | undefined>) {
        const response = await fetch(ENDPOINT, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            apikey: SUPABASE_ANON_KEY,
            Authorization: `Bearer ${SUPABASE_ANON_KEY}`,
          },
          body: JSON.stringify(payload),
        });

        const data = await response.json().catch(() => ({}));
        if (!response.ok) {
          return { ok: false, code: data.code || 'SERVER_ERROR' };
        }

        return { ok: true, status: data.status || 'created' };
      }

      function handleFormSubmit(formId: string, inputId: string, messageId: string) {
        const form = document.getElementById(formId);
        const input = document.getElementById(inputId);
        const message = document.getElementById(messageId);
        if (
          !(form instanceof HTMLFormElement) ||
          !(input instanceof HTMLInputElement) ||
          !(message instanceof HTMLElement)
        ) {
          return;
        }

        form.addEventListener('submit', async function (e: SubmitEvent) {
          e.preventDefault();

          const email = input.value.trim();
          const utm = getStoredUtm();

          if (!EMAIL_RE.test(email)) {
            setMessage(message, 'Please enter a valid email address.', true);
            track('waitlist_error', { code: 'INVALID_EMAIL' });
            return;
          }

          if (!ENDPOINT || !SUPABASE_ANON_KEY) {
            setMessage(message, 'Signup is temporarily unavailable. Please try again soon.', true);
            track('waitlist_error', { code: 'CONFIG_MISSING' });
            return;
          }

          const submitButton = form.querySelector('button[type="submit"]');
          if (submitButton instanceof HTMLButtonElement) {
            submitButton.disabled = true;
          }

          try {
            track('waitlist_submit', { form: formId });
            const result = await submitWaitlist({
              email: email.toLowerCase(),
              utm_source: utm.utm_source,
              utm_medium: utm.utm_medium,
              utm_campaign: utm.utm_campaign,
            });

            if (!result.ok) {
              setMessage(message, 'Could not submit right now. Please try again.', true);
              track('waitlist_error', { code: result.code || 'SERVER_ERROR' });
              return;
            }

            if (result.status === 'duplicate') {
              setMessage(message, 'You are already on the waitlist. We will keep you posted.', false);
            } else {
              setMessage(message, 'Thanks! We‚Äôll notify you when we launch.', false);
            }

            input.value = '';
            track('waitlist_success', { status: result.status });
          } catch {
            setMessage(message, 'Network error. Please try again in a moment.', true);
            track('waitlist_error', { code: 'NETWORK_ERROR' });
          } finally {
            if (submitButton instanceof HTMLButtonElement) {
              submitButton.disabled = false;
            }
          }
        });
      }

      captureFirstTouchUtm();
      track('waitlist_form_view', { path: window.location.pathname });

      const menuButton = document.getElementById('mobileMenuButton');
      if (menuButton instanceof HTMLButtonElement) {
        menuButton.addEventListener('click', toggleMobileMenu);
      }
      document.querySelectorAll<HTMLAnchorElement>('#mobileMenu a').forEach((link) => {
        link.addEventListener('click', () => {
          const menu = document.getElementById('mobileMenu');
          if (menu && menu.classList.contains('active')) {
            toggleMobileMenu();
          }
        });
      });

      document.querySelectorAll<HTMLElement>('a.btn, .nav-links a').forEach((element) => {
        element.addEventListener('click', () => {
          const name = (element.textContent || 'cta').trim().toLowerCase().replace(/\s+/g, '_');
          track('cta_click_primary', { name });
        });
      });

      handleFormSubmit('waitlistForm', 'emailInput', 'formMessage');
      handleFormSubmit('waitlistForm2', 'emailInput2', 'formMessage2');

      // Navbar scroll effect
      window.addEventListener('scroll', function () {
        const nav = document.querySelector('nav');
        if (nav instanceof HTMLElement) {
          if (window.scrollY > 50) {
            nav.style.boxShadow = 'var(--shadow)';
          } else {
            nav.style.boxShadow = 'none';
          }
        }
      });
    </script>
